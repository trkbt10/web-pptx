{
  "name": "web-pptx",
  "version": "0.1.0",
  "type": "module",
  "packageManager": "bun@1.2.21",
  "sideEffects": false,
  "bin": {
    "oxen": "./dist/oxen.js"
  },
  "workspaces": [
    "packages/@oxen/*",
    "packages/@oxen-office/*",
    "packages/@oxen-converters/*",
    "packages/@oxen-renderer/*",
    "packages/@oxen-ui/*",
    "packages/@oxen-cli/*",
    "packages/@oxen-builder/*",
    "packages/@oxen-mcp/*"
  ],
  "scripts": {
    "build": "vite build --config pages/vite.config.ts",
    "build:cli": "bun run --filter '@oxen-cli/pptx-cli' build && bun run --filter '@oxen-cli/docx-cli' build && bun run --filter '@oxen-cli/xlsx-cli' build && bun run --filter '@oxen-cli/cli' build",
    "build:cli:bundle": "bun build packages/@oxen-cli/cli/src/cli.ts --target bun --outfile dist/oxen.js",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:xlsx-editor": "eslint packages/@oxen-ui/xlsx-editor/src packages/@oxen-office/xlsx/src/formula packages/@oxen-office/opc/src/zip.ts packages/@oxen-office/opc/src/zip.spec.ts packages/@oxen-ui/ui-components/src/index.ts packages/@oxen-ui/ui-components/src/scroll packages/@oxen-ui/ui-components/src/context-menu packages/@oxen-ui/ui-components/src/grid packages/@oxen-ui/pptx-editor/src/ui/context-menu spec/xlsx-editor pages/app/App.tsx pages/app/pages/FileUploadPage.tsx pages/app/pages/xlsx-editor --max-warnings 0",
    "lint:xlsx-editor:scope": "eslint packages/@oxen-ui/xlsx-editor/src packages/@oxen-office/xlsx/src --max-warnings 0",
    "lint:xls-to-xlsx": "eslint packages/@oxen-office/xls/src packages/@oxen-office/cfb/src spec/xls scripts/generate-xls-fixtures --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit --rootDir .",
    "test:cov": "vitest run --coverage --exclude 'spec/visual-regression/**' --exclude 'spec/font-spacing/**' --exclude 'spec/vertical-text/**' --exclude 'spec/theme/visual-regression.spec.ts'",
    "test": "vitest --run --exclude 'spec/visual-regression/**' --exclude 'spec/font-spacing/**' --exclude 'spec/vertical-text/**' --exclude 'spec/theme/visual-regression.spec.ts'",
    "test:pptx": "vitest --run packages/@oxen-office/pptx/src",
    "test:logic": "vitest --run --exclude 'spec/visual-regression/**' --exclude 'spec/font-spacing/**' --exclude 'spec/vertical-text/**' --exclude 'spec/theme/visual-regression.spec.ts'",
    "test:visual": "vitest --run spec/visual-regression spec/font-spacing spec/vertical-text spec/theme/visual-regression.spec.ts",
    "test:all": "vitest --run",
    "test:pdf": "vitest --run packages/@oxen/pdf/src packages/@oxen-converters/pdf-to-pptx/src packages/@oxen-converters/pdf-to-pptx/spec --exclude packages/@oxen-converters/pdf-to-pptx/src/converter/modeling-pdf-analysis.spec.ts --exclude packages/@oxen-converters/pdf-to-pptx/src/converter/pdf-to-shapes-real-pdf-table.spec.ts",
    "test:xlsx-editor": "vitest --run packages/@oxen-ui/xlsx-editor/src packages/@oxen-office/xlsx/src/formula packages/@oxen-office/ooxml/src/opc/ooxml-zip.spec.ts packages/@oxen-ui/ui-components/src/scroll packages/@oxen-ui/ui-components/src/context-menu packages/@oxen-ui/ui-components/src/grid packages/@oxen-ui/pptx-editor/src/ui/context-menu spec/xlsx-editor",
    "dev:api": "bun run demo/api/index.ts",
    "dev:app": "vite --config demo/vite.config.ts",
    "dev:demo": "concurrently \"bun run dev:api\" \"bun run dev:app\"",
    "build:demo": "vite build --config demo/vite.config.ts",
    "dev:pages": "vite --config pages/vite.config.ts",
    "build:pages": "vite build --config pages/vite.config.ts",
    "dev:figma-demo": "vite --config packages/@oxen-renderer/figma/demo/vite.config.ts",
    "test:webgl": "vitest run packages/@oxen-renderer/figma/spec/webgl-shapes.spec.ts packages/@oxen-renderer/figma/spec/webgl-fills.spec.ts packages/@oxen-renderer/figma/spec/webgl-effects.spec.ts packages/@oxen-renderer/figma/spec/webgl-visual.spec.ts packages/@oxen-renderer/figma/spec/webgl-text.spec.ts",
    "test:webgl:update": "rm -f packages/@oxen-renderer/figma/fixtures/webgl-*/baseline/*.png && vitest run packages/@oxen-renderer/figma/spec/webgl-shapes.spec.ts packages/@oxen-renderer/figma/spec/webgl-fills.spec.ts packages/@oxen-renderer/figma/spec/webgl-effects.spec.ts packages/@oxen-renderer/figma/spec/webgl-visual.spec.ts packages/@oxen-renderer/figma/spec/webgl-text.spec.ts",
    "generate:pdf-fixtures": "bun run scripts/generate/generate-pdf-fixtures.ts --outputDir packages/@oxen-converters/pdf-to-pptx/spec/fixtures/pdf",
    "generate:pdfkit-fixtures": "bun run scripts/generate/generate-pdfkit-fixtures.ts --outputDir packages/@oxen-converters/pdf-to-pptx/spec/fixtures/pdfkit"
  },
  "devDependencies": {
    "@fontsource/inter": "^5.2.8",
    "@resvg/resvg-js": "^2.6.2",
    "@testing-library/react": "^16.3.1",
    "@types/earcut": "^3.0.0",
    "@types/jpeg-js": "^0.3.7",
    "@types/node": "^24.3.1",
    "@types/opentype.js": "^1.3.9",
    "@types/pdfkit": "^0.17.4",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.1.2",
    "earcut": "^3.0.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^56.1.2",
    "jpeg-js": "^0.4.4",
    "jsdom": "^27.4.0",
    "pdfkit": "^0.17.2",
    "pixelmatch": "^7.1.0",
    "prettier": "^3.6.2",
    "puppeteer": "^24.34.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@oxen-converters/pdf-to-pptx": "workspace:*",
    "@oxen-office/cfb": "workspace:*",
    "@oxen-office/chart": "workspace:*",
    "@oxen-office/docx": "workspace:*",
    "@oxen-office/ooxml": "workspace:*",
    "@oxen-office/opc": "workspace:*",
    "@oxen-office/pptx": "workspace:*",
    "@oxen-office/text-layout": "workspace:*",
    "@oxen-office/xls": "workspace:*",
    "@oxen-office/xlsx": "workspace:*",
    "@oxen-renderer/pptx": "workspace:*",
    "@oxen-ui/docx-editor": "workspace:*",
    "@oxen-ui/pptx-editor": "workspace:*",
    "@oxen-ui/ui-components": "workspace:*",
    "@oxen-ui/xlsx-editor": "workspace:*",
    "@oxen/buffer": "workspace:*",
    "@oxen/color": "workspace:*",
    "@oxen/css": "workspace:*",
    "@oxen/files": "workspace:*",
    "@oxen/jpeg": "workspace:*",
    "@oxen/pdf": "workspace:*",
    "@oxen/png": "workspace:*",
    "@oxen/url": "workspace:*",
    "@oxen/xml": "workspace:*",
    "@oxen/zip": "workspace:*",
    "fflate": "^0.8.2",
    "hono": "^4.11.1",
    "lucide-react": "^0.562.0",
    "opentype.js": "^1.3.4",
    "pngjs": "^7.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-panel-layout": "^0.6.1",
    "react-router-dom": "^7.6.1",
    "zustand": "^5.0.5"
  }
}
