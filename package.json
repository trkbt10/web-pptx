{
  "name": "web-pptx",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "packageManager": "bun@1.2.21",
  "sideEffects": false,
  "scripts": {
    "build": "vite build",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:xlsx-editor": "eslint src/xlsx-editor src/xlsx/formula src/files/ooxml-zip.ts src/files/ooxml-zip.spec.ts src/office-editor-components/index.ts src/office-editor-components/scroll src/office-editor-components/context-menu src/office-editor-components/grid src/pptx-editor/ui/context-menu spec/xlsx-editor pages/app/App.tsx pages/app/pages/FileUploadPage.tsx pages/app/pages/xlsx-editor --max-warnings 0",
    "lint:xlsx-editor:scope": "eslint src/xlsx-editor src/xlsx --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit --rootDir .",
    "typecheck:xlsx-editor": "tsc -p tsconfig.typecheck-xlsx-editor.json --noEmit",
    "test:cov": "vitest run --coverage",
    "test": "vitest --run",
    "test:xlsx-editor": "vitest --run src/xlsx-editor src/xlsx/formula src/files/ooxml-zip.spec.ts src/office-editor-components/scroll src/office-editor-components/context-menu src/office-editor-components/grid src/pptx-editor/ui/context-menu spec/xlsx-editor",
    "dev:api": "bun run demo/api/index.ts",
    "dev:app": "vite --config demo/vite.config.ts",
    "dev:demo": "concurrently \"bun run dev:api\" \"bun run dev:app\"",
    "build:demo": "vite build --config demo/vite.config.ts",
    "dev:pages": "vite --config pages/vite.config.ts",
    "build:pages": "vite build --config pages/vite.config.ts",
    "generate:pdf-fixtures": "bun run scripts/generate-pdf-fixtures.ts",
    "generate:pdfkit-fixtures": "bun run scripts/generate-pdfkit-fixtures.ts --outputDir spec/fixtures/pdfkit"
  },
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "@testing-library/react": "^16.3.1",
    "@types/jpeg-js": "^0.3.7",
    "@types/node": "^24.3.1",
    "@types/pdfkit": "^0.17.4",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^56.1.2",
    "jpeg-js": "^0.4.4",
    "jsdom": "^27.4.0",
    "pdfkit": "^0.17.2",
    "pixelmatch": "^7.1.0",
    "prettier": "^3.6.2",
    "puppeteer": "^24.34.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/three": "^0.182.0",
    "fflate": "^0.8.2",
    "hono": "^4.11.1",
    "pngjs": "^7.0.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-panel-layout": "^0.6.1",
    "react-router-dom": "^7.6.1",
    "three": "^0.182.0",
    "zustand": "^5.0.5"
  }
}
