{
  "name": "image-tint",
  "description": "Verify tint and luminance effects on images",
  "tags": ["image", "blip-effects", "tint", "luminance"],
  "input": {
    "template": "../templates/blank.pptx",
    "output": "../__output__/image-tint.pptx",
    "slides": [
      {
        "slideNumber": 1,
        "addImages": [
          {
            "type": "image",
            "path": "../assets/sample-green.png",
            "x": 50,
            "y": 50,
            "width": 150,
            "height": 120
          },
          {
            "type": "image",
            "path": "../assets/sample-green.png",
            "x": 220,
            "y": 50,
            "width": 150,
            "height": 120,
            "effects": {
              "tint": { "hue": 180, "amount": 50 }
            }
          },
          {
            "type": "image",
            "path": "../assets/sample-green.png",
            "x": 390,
            "y": 50,
            "width": 150,
            "height": 120,
            "effects": {
              "luminance": { "brightness": 20, "contrast": 0 }
            }
          },
          {
            "type": "image",
            "path": "../assets/sample-green.png",
            "x": 560,
            "y": 50,
            "width": 150,
            "height": 120,
            "effects": {
              "luminance": { "brightness": -20, "contrast": 30 }
            }
          },
          {
            "type": "image",
            "path": "../assets/sample-red.png",
            "x": 50,
            "y": 250,
            "width": 150,
            "height": 120
          },
          {
            "type": "image",
            "path": "../assets/sample-red.png",
            "x": 220,
            "y": 250,
            "width": 150,
            "height": 120,
            "effects": {
              "alphaModFix": 50
            }
          },
          {
            "type": "image",
            "path": "../assets/sample-blue.png",
            "x": 390,
            "y": 250,
            "width": 150,
            "height": 120,
            "effects": {
              "duotone": { "colors": ["000000", "FFFF00"] }
            }
          }
        ]
      }
    ]
  },
  "expected": {
    "slides": [
      {
        "slideNumber": 1,
        "shapes": [
          { "index": -7, "type": "pic" },
          { "index": -6, "type": "pic" },
          { "index": -5, "type": "pic" },
          { "index": -4, "type": "pic" },
          { "index": -3, "type": "pic" },
          { "index": -2, "type": "pic" },
          { "index": -1, "type": "pic" }
        ]
      }
    ]
  }
}
