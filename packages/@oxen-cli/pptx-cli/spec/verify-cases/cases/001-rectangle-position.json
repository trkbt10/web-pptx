{
  "name": "rectangle-position",
  "description": "Verify rectangle shape is placed at correct position with correct dimensions",
  "tags": ["shape", "rectangle", "position", "basic"],
  "input": {
    "template": "../templates/blank.pptx",
    "output": "../__output__/rectangle-position.pptx",
    "slides": [
      {
        "slideNumber": 1,
        "addShapes": [
          {
            "type": "rectangle",
            "x": 100,
            "y": 100,
            "width": 200,
            "height": 150
          }
        ]
      }
    ]
  },
  "expected": {
    "slides": [
      {
        "slideNumber": 1,
        "shapes": [
          {
            "index": -1,
            "type": "sp",
            "bounds": {
              "x": 100,
              "y": 100,
              "width": 200,
              "height": 150
            },
            "geometry": {
              "kind": "preset",
              "preset": "rect"
            }
          }
        ]
      }
    ]
  }
}
