{
  "name": "image-basic",
  "description": "Verify basic image placement on slide",
  "tags": ["image", "basic"],
  "input": {
    "template": "../templates/blank.pptx",
    "output": "../__output__/image-basic.pptx",
    "slides": [
      {
        "slideNumber": 1,
        "addImages": [
          {
            "type": "image",
            "path": "../assets/sample-red.png",
