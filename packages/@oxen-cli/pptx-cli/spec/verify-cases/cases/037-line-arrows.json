{
  "name": "line-arrows",
  "description": "Verify line arrow (head/tail end) properties",
  "tags": ["shape", "line", "arrow"],
  "input": {
    "template": "../templates/blank.pptx",
    "output": "../__output__/line-arrows.pptx",
    "slides": [
      {
        "slideNumber": 1,
        "addShapes": [
          {
            "type": "line",
            "x": 50,
            "y": 100,
            "width": 200,
            "height": 0,
            "lineColor": "000000",
            "lineWidth": 2,
            "lineTailEnd": { "type": "triangle", "width": "med", "length": "med" }
          },
          {
            "type": "line",
            "x": 50,
            "y": 150,
            "width": 200,
            "height": 0,
            "lineColor": "4472C4",
            "lineWidth": 2,
            "lineHeadEnd": { "type": "triangle", "width": "med", "length": "med" },
            "lineTailEnd": { "type": "triangle", "width": "med", "length": "med" }
          },
          {
            "type": "line",
            "x": 50,
            "y": 200,
            "width": 200,
            "height": 0,
            "lineColor": "ED7D31",
            "lineWidth": 3,
            "lineHeadEnd": { "type": "stealth", "width": "lg", "length": "lg" },
            "lineTailEnd": { "type": "diamond", "width": "lg", "length": "lg" }
          }
        ]
      }
    ]
  },
  "expected": {
    "slides": [
      {
        "slideNumber": 1,
        "shapes": [
          { "index": -3, "type": "sp", "line": { "color": "000000", "width": 2 } },
          { "index": -2, "type": "sp", "line": { "color": "4472C4", "width": 2 } },
          { "index": -1, "type": "sp", "line": { "color": "ED7D31", "width": 3 } }
        ]
      }
    ]
  }
}
