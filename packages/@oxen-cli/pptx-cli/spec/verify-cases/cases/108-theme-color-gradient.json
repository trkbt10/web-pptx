{
  "name": "theme-color-gradient",
  "description": "Verify theme colors in gradient fills",
  "tags": ["theme", "color", "gradient"],
  "input": {
    "template": "../templates/blank.pptx",
    "output": "../__output__/theme-color-gradient.pptx",
    "slides": [
      {
        "slideNumber": 1,
        "addShapes": [
          {
            "type": "rectangle",
            "x": 50,
            "y": 50,
            "width": 200,
            "height": 150,
            "fill": {
              "type": "gradient",
              "gradientType": "linear",
              "angle": 0,
              "stops": [
                { "position": 0, "color": { "theme": "accent1" } },
                { "position": 100, "color": { "theme": "accent2" } }
              ]
            },
            "text": "Accent 1 to 2"
          },
          {
            "type": "rectangle",
            "x": 280,
            "y": 50,
            "width": 200,
            "height": 150,
            "fill": {
              "type": "gradient",
              "gradientType": "linear",
              "angle": 90,
              "stops": [
                { "position": 0, "color": { "theme": "accent1", "lumMod": 100 } },
                { "position": 50, "color": { "theme": "accent1", "lumMod": 60 } },
                { "position": 100, "color": { "theme": "accent1", "lumMod": 20 } }
              ]
            },
            "text": "Accent 1 Shades"
          },
          {
            "type": "ellipse",
            "x": 50,
            "y": 230,
            "width": 200,
            "height": 150,
            "fill": {
              "type": "gradient",
              "gradientType": "radial",
              "stops": [
                { "position": 0, "color": { "theme": "lt1" } },
                { "position": 100, "color": { "theme": "dk1" } }
              ]
            },
            "text": [
              {
                "runs": [{ "text": "Radial Light to Dark", "color": "808080" }],
                "alignment": "center"
              }
            ]
          },
          {
            "type": "roundRect",
            "x": 280,
            "y": 230,
            "width": 200,
            "height": 150,
            "fill": {
              "type": "gradient",
              "gradientType": "linear",
              "angle": 45,
              "stops": [
                { "position": 0, "color": { "theme": "accent4" } },
                { "position": 33, "color": { "theme": "accent5" } },
                { "position": 66, "color": { "theme": "accent6" } },
                { "position": 100, "color": { "theme": "accent1" } }
              ]
            },
            "text": "Multi-accent"
          }
        ]
      }
    ]
  },
  "expected": {
    "slides": [
      {
        "slideNumber": 1,
        "shapes": [
          { "index": -4, "type": "sp", "text": "Accent 1 to 2" },
          { "index": -3, "type": "sp", "text": "Accent 1 Shades" },
          { "index": -2, "type": "sp", "text": "Radial Light to Dark" },
          { "index": -1, "type": "sp", "text": "Multi-accent" }
        ]
      }
    ]
  }
}
