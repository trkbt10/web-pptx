{
  "name": "image-grayscale",
  "description": "Verify grayscale effect on images",
  "tags": ["image", "blip-effects", "grayscale"],
  "input": {
    "template": "../templates/blank.pptx",
    "output": "../__output__/image-grayscale.pptx",
    "slides": [
      {
        "slideNumber": 1,
        "addImages": [
          {
            "type": "image",
            "path": "../assets/sample-red.png",
            "x": 50,
            "y": 50,
            "width": 200,
            "height": 150
          },
          {
            "type": "image",
            "path": "../assets/sample-red.png",
            "x": 300,
            "y": 50,
            "width": 200,
            "height": 150,
            "effects": {
              "grayscale": true
            }
          },
          {
            "type": "image",
            "path": "../assets/sample-blue.png",
            "x": 50,
            "y": 250,
            "width": 200,
            "height": 150
          },
          {
            "type": "image",
            "path": "../assets/sample-blue.png",
            "x": 300,
            "y": 250,
            "width": 200,
            "height": 150,
            "effects": {
              "grayscale": true
            }
          }
        ]
      }
    ]
  },
  "expected": {
    "slides": [
      {
        "slideNumber": 1,
        "shapes": [
          { "index": -4, "type": "pic" },
          { "index": -3, "type": "pic" },
          { "index": -2, "type": "pic" },
          { "index": -1, "type": "pic" }
        ]
      }
    ]
  }
}
