{
  "name": "@oxen-mcp/pptx-mcp",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "pptx-mcp": "./src/index.ts"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build:ui": "vite build",
