    "test:tools": "echo '{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"tools/list\"}' | bun src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.2",
    "@oxen-cli/pptx-cli": "workspace:*",
    "@oxen-ui/ui-components": "workspace:*",
    "hono": "^4.11.1",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.5.2",
    "vite": "^7.1.5"
  }
}
