{
  "name": "@oxen-office/pdf-to-pptx",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "dependencies": {
    "@oxen/buffer": "workspace:*",
    "@oxen/jpeg": "workspace:*",
    "@oxen/pdf": "workspace:*",
    "@oxen/png": "workspace:*",
    "@oxen/xml": "workspace:*",
    "@oxen/zip": "workspace:*",
    "@oxen-office/ooxml": "workspace:*",
    "@oxen-office/pptx": "workspace:*"
  },
  "devDependencies": {
    "@oxen-office/pptx-render": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest --run --passWithNoTests --config ../../../vitest.config.ts '../../../packages/@oxen-office/pdf-to-pptx/src'"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./importer/pdf-importer": {
      "types": "./src/importer/pdf-importer.ts",
      "default": "./src/importer/pdf-importer.ts"
    },
    "./importer/*": {
      "types": "./src/importer/*.ts",
      "default": "./src/importer/*.ts"
    },
    "./converter": {
      "types": "./src/converter/index.ts",
      "default": "./src/converter/index.ts"
    },
    "./converter/*": {
      "types": "./src/converter/*.ts",
      "default": "./src/converter/*.ts"
    },
    "./converter/*/*": {
      "types": "./src/converter/*/*.ts",
      "default": "./src/converter/*/*.ts"
    }
  }
}

